# ===========================================
# Tersa App - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# Required variables are marked with [REQUIRED]

# -------------------------------------------
# Database (Supabase/PostgreSQL)
# -------------------------------------------
# [REQUIRED] PostgreSQL connection URL
POSTGRES_URL=postgresql://postgres:password@localhost:5432/tersa

# [REQUIRED] Supabase URL for client-side auth
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# [REQUIRED] Supabase anonymous key for client-side
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase auth hook secret
SUPABASE_AUTH_HOOK_SECRET=v1,whsec_your-secret

# -------------------------------------------
# AI Providers
# -------------------------------------------
# OpenAI API key (for GPT models)
OPENAI_API_KEY=sk-your-openai-key

# xAI API key (for Grok models)
XAI_API_KEY=xai-your-xai-key

# AWS credentials (for Bedrock/Claude)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Hume AI (for voice/emotion)
HUME_API_KEY=your-hume-key

# LMNT (for text-to-speech)
LMNT_API_KEY=your-lmnt-key

# MiniMax (for video generation)
MINIMAX_GROUP_ID=your-minimax-group
MINIMAX_API_KEY=your-minimax-key

# RunwayML (for video generation)
RUNWAYML_API_SECRET=key_your-runway-key

# Luma AI (for video generation)
LUMA_API_KEY=luma-your-luma-key

# Black Forest Labs (for image generation)
BF_API_KEY=your-bf-key

# Vercel AI Gateway
AI_GATEWAY_API_KEY=your-gateway-key

# -------------------------------------------
# Stripe (Payments)
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PRO_PRODUCT_ID=prod_your-product-id
STRIPE_USAGE_PRODUCT_ID=prod_your-usage-product-id
STRIPE_CREDITS_METER_ID=mtr_your-meter-id
STRIPE_CREDITS_METER_NAME=credits
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -------------------------------------------
# Email (Resend)
# -------------------------------------------
RESEND_TOKEN=re_your-resend-token
RESEND_EMAIL=noreply@yourdomain.com

# -------------------------------------------
# Analytics
# -------------------------------------------
# PostHog analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Cloudflare Turnstile (CAPTCHA)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-key

# -------------------------------------------
# Deployment
# -------------------------------------------
# Vercel production URL (auto-set by Vercel)
VERCEL_PROJECT_PRODUCTION_URL=your-app.vercel.app

# Cloudflare Pages URL (if using CF)
CF_PAGES_URL=https://your-app.pages.dev
