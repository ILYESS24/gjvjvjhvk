# =============================================================================
# AURION STUDIO - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for local development
# In production, set these variables in your deployment platform
#
# SECURITY NOTE: Never commit actual API keys to source control!
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE (Required for database features)
# -----------------------------------------------------------------------------
# Supabase project URL - Get this from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key - Get this from your Supabase project settings
VITE_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required for auth features)
# -----------------------------------------------------------------------------
# Clerk authentication publishable key
# Get this from https://dashboard.clerk.com
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# -----------------------------------------------------------------------------
# API CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# Base URL for API requests (if using external API)
# VITE_API_BASE_URL=https://api.yourservice.com

# Base path for the application (useful for subdirectory deployments)
# Default: /
VITE_BASE_PATH=/

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# -----------------------------------------------------------------------------
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# PWA (Progressive Web App) - Enable offline capabilities
VITE_ENABLE_PWA=false

# Offline Mode - Enable offline-first data caching
VITE_ENABLE_OFFLINE_MODE=false

# Multi-tenant Mode - Enable multi-tenant features
VITE_ENABLE_MULTI_TENANT=false

# -----------------------------------------------------------------------------
# STATE MANAGEMENT & DATA FETCHING (Auto-configured)
# -----------------------------------------------------------------------------
# Zustand - Global state management (always enabled)
# React Query - Data fetching and caching (always enabled)
#
# Cache settings (defaults):
# - Query stale time: 5 minutes
# - Query cache time: 30 minutes
# - Retry attempts: 3

# -----------------------------------------------------------------------------
# DEVELOPMENT OPTIONS
# -----------------------------------------------------------------------------
# Enable debug mode (shows additional logging)
VITE_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# ANALYTICS (Optional)
# -----------------------------------------------------------------------------
# Google Analytics ID
# VITE_GA_ID=G-XXXXXXXXXX

# Mixpanel Token
# VITE_MIXPANEL_TOKEN=your-mixpanel-token
